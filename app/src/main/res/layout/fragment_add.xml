<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco_base"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:context=".ui.add.AddFragment">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gris_oscuro"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="@string/add_a_title"
            android:inputType="text"
            android:textColorHint="@color/gris_muy_claro"
            android:textColor="@color/gris_oscuro"
            android:fontFamily="sans-serif"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

        <TextView
            android:id="@+id/areaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/area"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gris_oscuro"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cookingButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/verde_claro"
            android:fontFamily="sans-serif-medium"
            android:text="@string/cooking"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="20dp"
            app:elevation="3dp"
            app:icon="@drawable/restaurante__1_"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconSize="32dp"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/sportsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/areaTextView"
            app:rippleColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sportsButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/rojo_claro"
            android:text="@string/sports"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            app:cornerRadius="20dp"
            app:elevation="3dp"
            app:icon="@drawable/correr"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconSize="32dp"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cookingButton"
            app:layout_constraintTop_toBottomOf="@+id/areaTextView"
            app:rippleColor="@color/black"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/studyButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/azul_claro"
            android:text="@string/study"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            app:cornerRadius="20dp"
            app:elevation="3dp"
            app:icon="@drawable/marcadores_de_diario"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconSize="32dp"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/othersButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cookingButton"
            app:rippleColor="@color/black"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/othersButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/amarillo_anaranjado"
            android:text="@string/others"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            app:cornerRadius="20dp"
            app:elevation="3dp"
            app:icon="@drawable/calendario_reloj"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconSize="32dp"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/studyButton"
            app:layout_constraintTop_toBottomOf="@+id/cookingButton"
            app:rippleColor="@color/black"/>

        <TextView
            android:id="@+id/typeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/type"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gris_oscuro"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studyButton" />

        <LinearLayout
            android:id="@+id/typeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typeTextView">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/standarButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="30dp"
                    app:elevation="2dp"
                    app:icon="@drawable/comenta_alt_check"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="30dp"
                    app:iconTint="@color/gris_oscuro"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />

                <TextView
                    android:id="@+id/standardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/standard"
                    android:textSize="12sp"
                    android:textColor="@color/gris"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/listButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="30dp"
                    app:elevation="2dp"
                    app:icon="@drawable/hacer"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="30dp"
                    app:iconTint="@color/gris_oscuro"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />

                <TextView
                    android:id="@+id/listTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/list"
                    android:textSize="12sp"
                    android:textColor="@color/gris"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/timerButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="30dp"
                    app:elevation="2dp"
                    app:icon="@drawable/cronografo"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="30dp"
                    app:iconTint="@color/gris_oscuro"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />

                <TextView
                    android:id="@+id/timerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/timer"
                    android:textSize="12sp"
                    android:textColor="@color/gris"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/frecuencyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/frequency"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gris_oscuro"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typeLayout" />

        <RadioGroup
            android:id="@+id/frequencyGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frecuencyTextView">

            <RadioButton
                android:id="@+id/weeklyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weekly"
                android:fontFamily="sans-serif"
                android:textColor="@color/gris_oscuro"
                android:buttonTint="@color/azul"
                android:checked="true" />

            <RadioButton
                android:id="@+id/daysButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/every_other_day"
                android:fontFamily="sans-serif"
                android:textColor="@color/gris_oscuro"
                android:buttonTint="@color/azul" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutDiasSemana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frequencyGroup">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/selecciona_los_dias"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gris_oscuro"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLunes"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="@string/l"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/gris_oscuro" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMartes"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="@string/m"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/gris_oscuro" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMiercoles"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="@string/x"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/gris_oscuro" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnJueves"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="@string/j"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/gris_oscuro" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViernes"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="@string/v"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/gris_oscuro" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSabado"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="@string/s"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/gris_oscuro" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDomingo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="@string/d"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/gris_oscuro" />
            </LinearLayout>
        </LinearLayout>

        <!-- Vista para intervalo de dÃ­as -->
        <LinearLayout
            android:id="@+id/layoutIntervalo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frequencyGroup">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/repetir_cada"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gris_oscuro"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frequencyGroup">

                <EditText
                    android:id="@+id/editTextDias"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ej_3"
                    android:inputType="number"
                    android:background="@drawable/edittext_background"
                    android:textColorHint="@color/gris_muy_claro"
                    android:textColor="@color/gris_oscuro"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/dias"
                    android:textSize="16sp"
                    android:textColor="@color/gris_oscuro"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/frequencyBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="layoutDiasSemana,layoutIntervalo" />

        <CheckBox
            android:id="@+id/reminderCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/enable_reminder"
            android:textSize="16sp"
            android:textColor="@color/gris_oscuro"
            android:fontFamily="sans-serif-medium"
            android:buttonTint="@color/azul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frequencyBarrier" />

        <LinearLayout
            android:id="@+id/layoutReminder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reminderCheckbox">

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/time"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:timePickerMode="spinner" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/add_habbit"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/azul"
            app:cornerRadius="28dp"
            app:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutReminder"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>